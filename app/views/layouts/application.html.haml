-# MINDPIN 工程原型Layout

:ruby
  tstr = ((yield :title) || '').gsub("\n",'')
  title = tstr.blank? ? "MINDPIN - Work - 原型" : "#{tstr} - MINDPIN - Work - 原型"

!!! 5
%html{:lang=>"zh"}
  %head
    %meta{:charset=>"utf-8"}
    %title=title
    = csrf_meta_tags
    = stylesheet_link_tag 'application'
    = yield :css
    = yield :head

  %body.echo.gray
    .page-sider
    .page-topbar
      .page-breadcrumb
        = yield :breadcrumb

      = yield :topbar
      
      .ops
        -if logged_in?
          .logout= link_to '退出登录', '/logout'

    .page-content
      = yield

    = javascript_include_tag 'application'
    = yield :javascript